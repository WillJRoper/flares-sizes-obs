archivePrefix = {arXiv},
arxivId = {2110.12075v1},
author = {Marshall, Madeline A and Wilkins, Stephen and {Di Matteo}, Tiziana and Roper, William J and Vĳayan, Aswin P and Ni, Yueying and Feng, Yu and Croft, Rupert AC},
eprint = {2110.12075v1},
journal = {\mnras},
keywords = {evolution-galaxies,galaxies,high-redshift},
pages = {1--16},
title = {{The Impact of Dust on the Sizes of Galaxies in the Epoch of Reionization}},
